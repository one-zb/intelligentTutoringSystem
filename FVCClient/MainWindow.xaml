<Window x:Class="FVCClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FVCTutor"
        xmlns:term="clr-namespace:FVCClient"
        mc:Ignorable="d" Background="DarkOliveGreen"
        Title="Intellectual Classroom" Height="800" Width="1000"
        Loaded="Window_Loaded" WindowStyle="ThreeDBorderWindow" 
        >
    <Window.Effect>
        <DropShadowEffect BlurRadius="50" Color="Black" Direction="90" ShadowDepth="10"/>
    </Window.Effect>

    <Grid Margin="0,0,0,-144">
        <RichTextBox Name="QuestionTextBox" FontSize="20" Height="387" Margin="10,14,10,0"  Width="1500"                   
				VerticalScrollBarVisibility="Visible" VerticalAlignment="Top" Background="Beige" IsReadOnly="True"
        />
        <term:InputTextBox x:Name="AnswerInputBox" FontFamily="Courier New" FontSize="18"
				IsPromptInsertedAtLaunch="False" IsSystemBeepEnabled="True"
                Margin="10,406,10,157" AcceptsReturn="True"
				VerticalScrollBarVisibility="Visible"  Background="Cornsilk"           
        />

        <!--<Label Content="问题"  Foreground="Beige" FontSize="14" HorizontalAlignment="Left" Margin="10,14,0,0" 
               VerticalAlignment="Top" Width="80"
               />
