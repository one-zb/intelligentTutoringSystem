                Background="DarkOrchid" VerticalAlignment="Top" Width="85" Height="25" Click="ChooseButtonClick"
                />
        <Button Content="提出问题"  Foreground="Beige" Name="StartButton" HorizontalAlignment="Left" Margin="7,480,0,0" 
                VerticalAlignment="Top" Width="85" Height="25" Click="OnStartButtonClick" Background="DarkOrchid"
                />
        <Button Content="提交回答"  Foreground="Beige" Name="SubmitButton"  HorizontalAlignment="Left" Margin="7,520,0,0" 
                VerticalAlignment="Top" Width="85" Height="25" Click="SubmitButtonClick" Background="DarkOrchid"
                />
        <Button Content="输入公式"  Foreground="Beige" Name="FormulaInputButton" HorizontalAlignment="Left"
